@page "/pie-chart"

<h1>Radzen Blazor Chart pie series</h1>
<RadzenExample Name="Chart" Source="PieChart" Heading="false">
    <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-6 offset-lg-3 my-5">
                <RadzenChart SeriesClick=@OnSeriesClick>
                    <RadzenPieSeries Data="@revenue" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue" />
                </RadzenChart>
            </div>
        </div>
        <EventConsole @ref=@console />
    </div>
</RadzenExample>

@code {
    EventConsole console;

    void OnSeriesClick(SeriesClickEventArgs args)
    {
        console.Log(args);
    }

    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Revenue = 30000
        },
        new DataItem
        {
            Quarter = "Q2",
            Revenue = 40000
        },
        new DataItem
        {
            Quarter = "Q3",
            Revenue = 50000
        },
        new DataItem
        {
            Quarter = "Q4",
            Revenue = 80000
        },
    };
}